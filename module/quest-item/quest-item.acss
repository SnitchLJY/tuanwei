.quest-item-wrapper {
  padding: 24rpx 12rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ddd;
}

.quest-item-wrapper:last-child {
  border-bottom: none;
}

.quest-item-wrapper .quest-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.quest-item-wrapper .quest-item .left-text {
  text-align: left;
}

.quest-item-wrapper .quest-item .right-text {
  text-align: right;
}

.quest-item-wrapper .quest-item .top-title {
  color: #333;
  font-size: 34rpx;
}

.quest-item-wrapper .quest-item .sub-text {
  padding-top: 8rpx;
  color: #999;
  font-size: 28rpx;
}
